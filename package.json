{
  "name": "@e18e/monorepo",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.4.0",
  "scripts": {
    "dev": "npm -C docs run dev",
    "build": "npm -C docs run build",
    "serve": "npm -C docs run serve",
    "lint": "eslint --cache .",
    "lint:fix": "nr lint --fix"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.2.0",
    "@antfu/ni": "^23.3.1",
    "@types/node": "^22.13.4",
    "eslint": "^9.20.1",
    "lint-staged": "^15.4.3",
    "simple-git-hooks": "^2.11.1",
    "typescript": "~5.7.3"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "eslint"
      ]
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --cache --fix"
    ]
  }
}
